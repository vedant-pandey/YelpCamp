<% include ../partials/header %>


<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit your comment!</h1>

		<div style="width: 30%; margin: 35px auto; ">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea rows="15" name="comment[text]" class="form-control">
						<%=comment.text%>
					</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds/<%=campground_id%>">Back</a>
		</div>
	</div>
</div>






