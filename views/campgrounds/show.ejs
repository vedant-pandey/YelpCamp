<% include ../partials/header %>

<!-- ////////////////////////////////////////////////////////////////////////////////// -->

       
<div class="container">
    <div class="row">
      <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item">Info 2</li>
          <li class="list-group-item">Info 3</li>
        </div>
      </div>
      <div class="col-md-9">
        <div class="thumbnail">
          <img class="img-responsive" src="<%=cg.image%>">
          <div class="caption-full">
            <h4 class="pull-right">Rs. <%=cg.price%>.00/night</h4>
            <h4><a href="#"><%=cg.name%></a></h4>
            <p><%=cg.description%></p>
            <p><em>
              Submitted by - <strong><%= cg.author.username.toUpperCase()%></strong>
            </em></p>
            <% if (user && cg.author.id.equals(user._id)) { %>
              <a class="btn btn-warning" id="edtbtn" href="/campgrounds/<%=cg._id%>/edit">  Edit  </a>
              <form class="delfrm" action="/campgrounds/<%=cg._id%>?_method=delete" method="POST">
                <button class="btn btn-danger" id="delbtn">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
        <div class="well">
          <div class="text-right"><a class="btn btn-primary" href="/campgrounds/<%=cg._id%>/comments/new">Write a  new comment!!</a></div>
          <hr>
          <%cg.comments.forEach(function(comment) {%>
            <div class="row">
              <div class="col-md-12">
                <strong><%=comment.author.username%></strong>
                <span class="pull-right">10 days ago</span>
                <p>
                  <%= comment.text%>
                </p>
                <% if (user && comment.author.id.equals(user._id)) { %>
                  <a class="btn btn-warning btn-xs" href="/campgrounds/<%=cg._id%>/comments/<%=comment._id%>/edit">Edit</a>
                  <form class="delfrm" action="/campgrounds/<%=cg._id%>/comments/<%=comment._id%>?_method=delete" method="POST">
                    <button class="btn btn-danger btn-xs">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
            <br>
          <%});%>
        </div>
      </div>
    </div>
    
    
    
</div>

<!-- ///////////////////////////////////////////////////////////////// -->

<% include ../partials/footer %>