<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="styledh1">Edit campground:- <%=cg.name%></h1>

		<div class="styledfrm">
			<form action="/campgrounds/<%= cg._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Campground Name" value="<%=cg.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" value="<%=cg.price%>" min="99.00" step="10.00">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%=cg.image%>">
				</div>
				<div class="form-group">
					<!-- <input    placeholder="Add a description of your image!" value=""> -->
					<textarea rows="15" name="campground[description]" class="form-control">
						<%=cg.description%>
					</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>